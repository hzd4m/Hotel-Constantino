#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Ensure tmp directories exist
mkdir -p /rails/tmp/pids /rails/tmp/cache /rails/tmp/sockets

# Clean up stale PID from previous runs to avoid boot failures on restart
rm -f /rails/tmp/pids/server.pid

ensure_sqlite_dir() {
  case "$1" in
    sqlite3:*)
      local path="${1#sqlite3:}"
      [ -n "$path" ] && mkdir -p "$(dirname "$path")"
      ;;
  esac
}

ensure_sqlite_dir "${DATABASE_URL:-}"
ensure_sqlite_dir "${CABLE_DATABASE_URL:-}"
ensure_sqlite_dir "${QUEUE_DATABASE_URL:-}"
ensure_sqlite_dir "${CACHE_DATABASE_URL:-}"

[ -n "${DATABASE_PATH:-}" ] && ensure_sqlite_dir "sqlite3:${DATABASE_PATH}"
[ -n "${CABLE_DATABASE_PATH:-}" ] && ensure_sqlite_dir "sqlite3:${CABLE_DATABASE_PATH}"
[ -n "${QUEUE_DATABASE_PATH:-}" ] && ensure_sqlite_dir "sqlite3:${QUEUE_DATABASE_PATH}"
[ -n "${CACHE_DATABASE_PATH:-}" ] && ensure_sqlite_dir "sqlite3:${CACHE_DATABASE_PATH}"

# If running the rails server then create or migrate existing database
if [ "$1" == "./bin/rails" ] && [ "$2" == "server" ]; then
  ./bin/rails db:prepare
fi

exec "${@}"
