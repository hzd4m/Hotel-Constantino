<% content_for :title, "Hotéis" %>

<div class="page-header">
  <div class="stack-sm">
    <span class="page-eyebrow"><i class="bi bi-building"></i> Portfólio</span>
    <h1 class="page-header__title">Inventário de hotéis</h1>
    <p class="page-header__subtitle">Visualize unidades ativas, refine resultados e mantenha os dados sempre atualizados.</p>
  </div>
  <div class="page-actions">
    <%= link_to 'Cadastrar hotel', new_hotel_path, class: "btn btn-gradient" %>
  </div>
</div>

<div class="filters-card surface-card surface-card--compact">
  <%= form_with url: hotels_path, method: :get, local: true, scope: nil, class: "filters-card__form" do |f| %>
    <div class="filters-card__fields">
      <div class="filters-card__field">
        <%= f.label :nome, "Nome", class: "form-label" %>
        <%= f.text_field :nome, value: @filters[:nome], class: "form-control" %>
      </div>

      <div class="filters-card__field">
        <%= f.label :cidade, "Cidade", class: "form-label" %>
        <%= f.text_field :cidade, value: @filters[:cidade], class: "form-control" %>
      </div>

      <div class="filters-card__field">
        <%= f.label :categoria, "Categoria", class: "form-label" %>
        <%= f.select :categoria, options_for_select(['Luxo','Praia','Montanha','Urbano','Campo'], @filters[:categoria]), { include_blank: "Todas" }, class: "form-select" %>
      </div>
    </div>

    <div class="filters-card__actions">
      <%= f.submit "Aplicar filtros", class: "btn btn-gradient" %>
      <%= link_to "Limpar", hotels_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

<div class="surface-card surface-card--flush table-card">
  <div class="table-card__header">
    <div>
      <span class="page-eyebrow d-inline-flex align-items-center gap-2"><i class="bi bi-geo"></i> Unidades</span>
      <h2 class="table-card__title">Lista de hotéis</h2>
      <p class="table-card__title-sub"><%= pluralize(@hotels.count, "registro") %> exibidos atualmente</p>
    </div>
    <div class="table-card__toolbar">
      <% if current_user.admin? %>
  <%= render "shared/export_controls",
       csv_path: export_hotels_path(format: :csv),
       pdf_path: export_hotels_path(format: :pdf),
       filters: [:nome, :cidade, :categoria],
       filter_values: @filters %>
      <% end %>
      <%= link_to 'Adicionar hotel', new_hotel_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>

  <% if @hotels.any? %>
    <div class="table-card__body">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Cidade</th>
              <th scope="col">Endereço</th>
              <th scope="col">Telefone</th>
              <th scope="col">Categoria</th>
              <th scope="col" class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @hotels.each do |hotel| %>
              <tr>
                <td>
                  <div class="stack-sm mb-0">
                    <strong><%= hotel.nome %></strong>
                    <span class="text-muted small">ID <%= hotel.id %></span>
                  </div>
                </td>
                <td><%= hotel.cidade %></td>
                <td><%= hotel.endereco %></td>
                <td><%= hotel.telefone %></td>
                <td><span class="badge badge-outline"><%= hotel.categoria %></span></td>
                <td class="text-end">
                  <div class="table-actions">
                    <%= link_to hotel_path(hotel), class: "btn btn-outline-secondary btn-sm" do %>
                      Ver <i class="bi bi-arrow-up-right"></i>
                    <% end %>
                    <%= link_to edit_hotel_path(hotel), class: "btn btn-outline-secondary btn-sm" do %>
                      Editar <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to hotel_path(hotel), method: :delete, form: { class: "d-inline" }, class: "btn btn-outline-danger btn-sm", data: { turbo_confirm: 'Tem certeza que deseja excluir este hotel?' } do %>
                      Excluir <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-state__icon"><i class="bi bi-geo"></i></div>
      <p class="mb-2">Nenhum hotel encontrado.</p>
      <%= link_to 'Cadastrar primeiro hotel', new_hotel_path, class: "btn btn-gradient" %>
    </div>
  <% end %>
</div>

<%= render "shared/pagination", collection: @hotels %>

<div class="mt-4">
  <%= link_to "Página inicial", home_path, class: "btn btn-link px-0" %>
</div>

