<% content_for :title, "Hotel Constantino" %>

<% hero_stats = [
    { label: "Destinos assinados", value: "12" },
    { label: "Hóspedes encantados", value: "4.9/5" },
    { label: "Concierge dedicado", value: "24h" }
] %>

<% experience_pillars = [
    { icon: "door-open", title: "Suítes de assinatura", copy: "Design brasileiro, tecidos naturais e obras exclusivas para despertar sensações em cada ambiente." },
    { icon: "chat-dots", title: "Hospitalidade com alma", copy: "Equipe curadora que antecipa desejos, mima com detalhes e transforma pedidos em memórias." },
    { icon: "phone", title: "Tecnologia que abraça", copy: "Check-in fluido, chave virtual e concierge on-line que acompanham você em cada momento da jornada." }
] %>

<% audience_cards = [
    { eyebrow: "Para hóspedes", title: "Seu portal de encantamento", copy: "Acompanhe cada detalhe da estadia, personalize preferências e converse com o concierge em segundos.", cta: { text: "Entrar no portal", path: new_user_session_path } },
    { eyebrow: "Para empresas", title: "Hospitalidade corporativa", copy: "Programas sob medida para eventos, viagens a trabalho e long stays com curadoria, relatórios e faturamento centralizado.", cta: { text: "Fale com o comercial", path: "mailto:corporativo@hotelconstantino.com" } },
    { eyebrow: "Para equipe", title: "Inteligência operacional", copy: "Reservas, governança e manutenção em um painel vivo, com métricas acionáveis e comunicação instantânea.", cta: { text: "Acessar painel", path: new_user_session_path } }
] %>

<% editorial_highlights = [
    { number: "01", title: "Coleções exclusivas", copy: "Cada hotel celebra artistas locais, aromas autorais e menus que traduzem a alma de cada destino." },
    { number: "02", title: "Bem-estar inteiro", copy: "Spa sensorial, academia imersiva e experiências de mindfulness que se ajustam ao seu ritmo." },
    { number: "03", title: "Comunidade Constantino", copy: "Benefícios progressivos, upgrades generosos e convites para eventos intimistas em toda a rede." }
] %>

<% content_for :full_width do %>
    <section class="py-5">
        <div class="container">
            <div class="surface-card surface-card--flush welcome-hero-panel">
                <div class="stack-lg justify-content-between">
                    <div class="stack-md">
                        <span class="welcome-highlight"><i class="bi bi-stars"></i> Hotelaria autoral</span>
                        <h1 class="display-5 fw-semibold mb-2">Onde o luxo silencioso encontra a sensibilidade brasileira.</h1>
                        <p class="text-muted">Suites banhadas de luz, serviço que entende o não dito e tecnologia que desaparece para deixar apenas o encantamento.</p>
                        <div class="d-flex flex-wrap gap-3">
                            <%= link_to "Agendar estadia", new_user_session_path, class: "btn btn-gradient btn-lg" %>
                            <%= link_to "Conhecer a coleção", hotels_path, class: "btn btn-outline-secondary btn-lg" %>
                        </div>
                    </div>
                    <div class="welcome-stats-grid">
                        <% hero_stats.each do |stat| %>
                            <div class="welcome-stat">
                                <span class="text-muted text-uppercase small"><%= stat[:label] %></span>
                                <strong class="display-6 fw-semibold mb-0"><%= stat[:value] %></strong>
                            </div>
                        <% end %>
                    </div>
                </div>
                <div class="welcome-hero-media">
                    <img src="https://images.unsplash.com/photo-1496417263034-38ec4f0b665a?auto=format&fit=crop&w=1600&q=80" alt="Suite luminosa do Hotel Constantino" class="w-100 h-100 object-fit-cover">
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="welcome-experience surface-card surface-card--flush">
                <div class="welcome-experience__intro stack-md">
                    <span class="welcome-eyebrow">Experiência Constantino</span>
                    <div class="stack-sm">
                        <h2 class="h4 fw-semibold mb-0">Detalhes que despertam todos os sentidos</h2>
                        <p class="text-muted mb-0">Dos lençóis ao aroma do lobby, cada escolha revela cuidado para que você se sinta inspirado, protegido e livre.</p>
                    </div>
                </div>
                <div class="welcome-experience__grid">
                    <% experience_pillars.each do |pillar| %>
                        <div class="welcome-experience__item surface-card surface-card--compact stack-md">
                            <div class="feature-icon-pill"><i class="bi bi-<%= pillar[:icon] %>"></i></div>
                            <h3 class="h5 fw-semibold mb-1"><%= pillar[:title] %></h3>
                            <p class="text-muted mb-0"><%= pillar[:copy] %></p>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="welcome-editorial-card surface-card surface-card--flush">
                <div class="welcome-editorial-card__content stack-lg">
                    <span class="welcome-eyebrow">Novas coleções</span>
                    <div class="stack-sm">
                        <h2 class="h4 fw-semibold mb-0">Bem-estar com assinatura brasileira</h2>
                        <p class="text-muted mb-0">Das amenidades artesanais aos rituais de spa ao entardecer, tudo foi desenhado para quem busca um ritmo sereno e sofisticado.</p>
                    </div>
                    <div class="welcome-editorial-list">
                        <% editorial_highlights.each do |highlight| %>
                            <div class="welcome-editorial-item">
                                <span class="welcome-editorial-number"><%= highlight[:number] %></span>
                                <div class="welcome-editorial-copy">
                                    <strong class="d-block"><%= highlight[:title] %></strong>
                                    <span class="text-muted"><%= highlight[:copy] %></span>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
                <div class="welcome-editorial-card__media">
                    <img src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?auto=format&fit=crop&w=1600&q=80" alt="Detalhes de bem-estar do Hotel Constantino" class="w-100 h-100 object-fit-cover">
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="welcome-audience-grid">
                <% audience_cards.each do |card| %>
                    <div class="welcome-audience-card surface-card surface-card--compact">
                        <span class="page-eyebrow"><%= card[:eyebrow] %></span>
                        <h3 class="h5 fw-semibold mb-1"><%= card[:title] %></h3>
                        <p class="text-muted mb-0"><%= card[:copy] %></p>
                        <%= link_to card[:cta][:text], card[:cta][:path], class: "btn btn-outline-secondary welcome-audience-card__cta" %>
                    </div>
                <% end %>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="welcome-cta surface-card surface-card--flush">
                <div class="welcome-cta__content stack-md">
                    <span class="badge-gradient badge align-self-start">Concierge Constantino</span>
                    <h2 class="h4 fw-semibold mb-0">Pronto para viver seu próximo capítulo Constantino?</h2>
                    <p class="text-muted mb-0">Criamos roteiros sob medida, coordenamos amenities especiais e acompanhamos cada detalhe antes, durante e depois da sua estadia.</p>
                </div>
                <div class="welcome-cta__actions d-flex flex-wrap gap-3">
                    <%= link_to "Conversar com o concierge", "mailto:reservas@hotelconstantino.com", class: "btn btn-gradient btn-lg" %>
                    <%= link_to "Explorar destinos", hotels_path, class: "btn btn-outline-secondary btn-lg" %>
                </div>
            </div>
        </div>
    </section>
<% end %>
