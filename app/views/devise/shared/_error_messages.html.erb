<% if resource && resource.errors.any? %>
  <div class="toast-glow flash-banner flash-banner--danger">
    <strong class="d-block mb-2"><%= t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %></strong>
    <ul class="mb-0 ps-3">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
