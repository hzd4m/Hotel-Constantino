<% content_for :title, "Hóspedes" %>

<div class="page-header">
  <div class="stack-sm">
    <span class="page-eyebrow"><i class="bi bi-people"></i> Relacionamento</span>
    <h1 class="page-header__title">Hóspedes</h1>
    <p class="page-header__subtitle">Centralize cadastros, contatos e histórico de quem já viveu a experiência Constantino.</p>
  </div>
  <div class="page-actions">
    <%= link_to 'Novo hóspede', new_hospede_path, class: "btn btn-gradient" %>
  </div>
</div>

<div class="surface-card surface-card--compact filters-card">
  <%= form_with url: hospedes_path, method: :get, local: true, scope: nil, class: "row g-3 align-items-end" do |form| %>
    <div class="col-12 col-md-4">
      <%= form.label :nome, "Nome", class: "form-label" %>
      <%= form.text_field :nome, value: params[:nome], class: "form-control" %>
    </div>

    <div class="col-12 col-md-4">
      <%= form.label :documento, "Documento", class: "form-label" %>
      <%= form.text_field :documento, value: params[:documento], class: "form-control" %>
    </div>

    <div class="col-12 col-md-4">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.text_field :email, value: params[:email], class: "form-control" %>
    </div>

    <div class="col-12 col-xl-4 col-xxl-3 d-flex gap-2">
      <%= form.submit "Pesquisar", class: "btn btn-outline-secondary flex-grow-1" %>
      <%= link_to "Limpar", hospedes_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

<div class="surface-card surface-card--flush table-card">
  <div class="table-card__header">
    <h2 class="table-card__title">Cadastro de hóspedes</h2>
    <span class="text-muted small"><%= pluralize(@hospedes.count, "registro") %> exibidos</span>
  </div>

  <% if @hospedes.any? %>
    <div class="table-card__body">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Documento</th>
              <th scope="col">Email</th>
              <th scope="col">Telefone</th>
              <th scope="col" class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @hospedes.each do |hospede| %>
              <tr>
                <td><%= hospede.nome %></td>
                <td><%= hospede.documento %></td>
                <td><%= hospede.email %></td>
                <td><%= hospede.telefone %></td>
                <td class="text-end">
                  <div class="d-inline-flex gap-2">
                    <%= link_to 'Ver', hospede_path(hospede), class: "btn btn-outline-secondary btn-sm" %>
                    <%= link_to 'Editar', edit_hospede_path(hospede), class: "btn btn-outline-secondary btn-sm" %>
                    <%= button_to 'Excluir', hospede_path(hospede), method: :delete, form: { class: "d-inline" }, class: "btn btn-outline-danger btn-sm", data: { turbo_confirm: 'Tem certeza que deseja excluir?' } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-state__icon"><i class="bi bi-emoji-smile"></i></div>
      <p class="mb-2">Nenhum hóspede encontrado.</p>
      <%= link_to 'Cadastrar hóspede', new_hospede_path, class: "btn btn-gradient" %>
    </div>
  <% end %>
</div>

<%= render "shared/pagination", collection: @hospedes %>

<div class="mt-4">
  <%= link_to "Página inicial", home_path, class: "btn btn-link px-0" %>
</div>
